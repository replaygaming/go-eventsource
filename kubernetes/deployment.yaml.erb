apiVersion: apps/v1
kind: Deployment
metadata:
  name: eventsource
  labels:
    component: eventsource
    environment: <%= environment %>
spec:
  replicas: <%= replicas %>
  selector:
    matchLabels:
      component: eventsource
      environment: <%= environment %>
  template:
    metadata:
      labels:
        component: eventsource
        environment: <%= environment %>
    spec:
      containers:
      - name: eventsource
        image: us.gcr.io/replay-gaming/go-eventsource:<%= tag %>
        env:
        - name: ES_TOPIC
          value: <%= topic_name %>
        <% if environment == "production" %>
        - name: ES_COMPRESSION
          value: "true"
        <% end %>
        - name: PUBSUB_PROJECT_ID
          valueFrom:
            secretKeyRef:
              name: pubsub
              key: project-id
        - name: ES_SUBSCRIPTION
          valueFrom:
            fieldRef:
              apiVersion: v1
              fieldPath: metadata.name
        <% if metrics_provider %>
        - name: ES_METRICS
          value: "true"
        - name: ES_METRICS_PROVIDER
          value: "<%= metrics_provider %>"
        - name: ES_METRICS_PREFIX
          value: <%= environment %>
        <% end %>
        - name: PUBSUB_KEYFILE
          value: /etc/pubsub/keyfile.json
        volumeMounts:
          - name: pubsub-secret
            readOnly: true
            mountPath: /etc/pubsub
        ports:
        - name: sse
          containerPort: 80
        resources:
          requests:
            cpu: <%= cpu_request %>
            memory: <%= memory_request %>
          limits:
            cpu: <%= cpu_limit %>
            memory: <%= memory_limit %>
        imagePullPolicy: Always
      volumes:
        - name: pubsub-secret
          secret:
            secretName: pubsub
